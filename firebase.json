{
  "functions": [
    {
      "source": "functions/studio-spa/dist",
      "codebase": "studio-spa",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "copy \"functions/studio-spa/package.json\" \"functions/studio-spa/dist\"",
        "npm --prefix \"functions/studio-spa\" run lint",
        "npm --prefix \"functions/studio-spa\" run build",
        "copy \"functions/studio-spa/.env\" \"functions/studio-spa/dist\"",
        "copy \"functions/studio-spa/package.json\" \"functions/studio-spa/dist\""
      ],
      "runtime": "nodejs20"
    },
    {
      "source": "functions/cron",
      "codebase": "cron-jobs",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ],
      "runtime": "nodejs20"
    }
  ]
}
